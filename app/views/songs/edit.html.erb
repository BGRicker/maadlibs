<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-text">
          <span class="name">MAAD Libs</span>
          <span class="skills">Choose a bunch of words without punctuation that fit their categories to replace their swears below</span><br><br>
          <span class="skills">Example: NOUNS: "pizza Fieri basketball" will add the possibility that "pizza," "Fieri," and "basketball" will appear in place of noun swears</span>
        </div>
      </div>
    </div>
  </div>
</header>

<%= simple_form_for @song do |f| %>
  <section id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2><%= @song.artist %> - <%= @song.title %></h2>
          <hr class="star-primary">
          <% if flash[:error] %>
            <h4><div class="error"><%= flash.now[:error] %></div></h4>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <form name="sentMessage" id="contactForm" novalidate>

            <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <label></label>
                <%= f.input :nouns, input_html: { type: 'text', class: "form-control", placeholder: "Nouns", id: "name" } %>
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <label></label>
                <%= f.input :adjectives, input_html: { type: 'text', class: "form-control", placeholder: "Adjectives", id: "name" } %>
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <label></label>
                <%= f.input :people, input_html: { type: 'text', class: "form-control", placeholder: "People", id: "name" } %>
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <label></label>
                <%= f.input :verbs, input_html: { type: 'text', class: "form-control", placeholder: "Verbs", id: "name" } %>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <br>

            <div id="success"></div>
            <div class="row">
              <div class="form-group col-xs-12">
                <%= f.submit class: 'btn btn-success btn-lg' %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  <% if @song.errors.any? %>
    <% redirect_to new_song_path %>
  <% end %>
<% end %>
